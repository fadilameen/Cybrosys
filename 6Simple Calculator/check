$(document).ready(function () {
  var og;
  var operators = ["+", "-", "/", "x"];

  $("input").click(function () {
    key = $(this).val();

    if (key === "C") {
      $("#display").html("");
    } else if (key === "=") {
      try {
        expression = $("#display").html();
        expression = expression.replaceAll("x", "*");
        // console.log(expression);
        len = expression.length;
        for (let i = len - 1; i >= 0; i--) {
          // console.log(expression[i]);
